func get_color_palette_neon(index) {
    let color = "Rojo";
    
    if index == 1 {
        color = "Rojo";
    } else {
        if index == 2 {
            color = "Verde";
        } else {
            if index == 3 {
                color = "Azul";
            } else {
                if index == 4 {
                    color = "Amarillo";
                } else {
                    if index == 5 {
                        color = "Púrpura";
                    } else {
                        if index == 6 {
                            color = "Cian";
                        }
                    }
                }
            }
        }
    }
    
    return color;
}

